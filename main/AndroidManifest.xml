<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lcc.rai.subnettingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".OptionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- exercises -->
        <activity
            android:name=".Views.Exercises.ClassExercise"
            android:parentActivityName=".OptionActivity" />
        <activity
            android:name=".Views.Exercises.IPv4Masks"
            android:parentActivityName=".OptionActivity" />
        <activity
            android:name=".Views.Exercises.BinToDec"
            android:parentActivityName=".OptionActivity" />
        <activity
            android:name=".Views.Exercises.DecToBin"
            android:parentActivityName=".OptionActivity" />
        <activity
            android:name=".Views.Exercises.BinaryAnding"
            android:parentActivityName=".OptionActivity" />
        <activity
            android:name=".Views.Exercises.CustomSubnetExercise"
            android:parentActivityName=".OptionActivity" />
        <activity android:name=".Views.Exercises.customSubnetAnswers" />
    </application>

</manifest>